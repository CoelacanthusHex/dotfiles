Include config.d/*

Host aur aur.archlinux.org
    IdentityFile ~/.ssh/aur
    Hostname aur.archlinux.org
    User aur

Host github.com
    User git
    IdentityFile ~/.ssh/06F96A0FB5AD258D.pub
    ProxyUseFdpass yes
    # socks5 proxy
    ProxyCommand nc -F -x localhost:1089 -X 5 %h %p
    # http proxy
    #ProxyCommand nc -F -x localhost:8889 -X connect %h %p

Host codereview.qt-project.org
    Port 29418
    User coelacanthus
    IdentityFile ~/.ssh/06F96A0FB5AD258D.pub
    PubkeyAcceptedKeyTypes +ssh-rsa
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha1

Host archlinuxcn
    User coelacanthus
    Hostname build.archlinuxcn.org
    IdentityFile ~/.ssh/06F96A0FB5AD258D.pub

Match all
    ControlMaster auto
    ControlPath ~/.ssh/socket/%h-%p-%r
    ControlPersist 4h
    # Keep Alive
    ServerAliveInterval 120
    # Enable compression to optimize in bad network environment
    Compression yes
    # https://infosec.mozilla.org/guidelines/openssh.html#modern
    # https://www.ssh-audit.com/hardening_guides.html
    # Ensure KnownHosts are unreadable if leaked - it is otherwise easier to know which hosts your keys have access to.
    HashKnownHosts yes
    # Host keys the client accepts - order here is honored by OpenSSH
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
    KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,sntrup761x25519-sha512@openssh.com,diffie-hellman-group16-sha512,diffie-hellman-group18-sha512,diffie-hellman-group-exchange-sha256
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com
    HostKeyAlgorithms ssh-ed25519,ssh-ed25519-cert-v01@openssh.com,sk-ssh-ed25519@openssh.com,sk-ssh-ed25519-cert-v01@openssh.com,rsa-sha2-256,rsa-sha2-256-cert-v01@openssh.com,rsa-sha2-512,rsa-sha2-512-cert-v01@openssh.com
    # Disable SSH Protocol Version 1 for security reason
    Protocol 2
    # Pass Environment variable to server
    SendEnv COLORTERM

# https://wiki.archlinux.org/title/GnuPG#Configure_pinentry_to_use_the_correct_TTY
Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"
    
